# Builds static library libaudio.a

LIBNAME = libaudio.a
SRCDIR = ./
SRCFILES = $(wildcard *.cc)

# Compiler settings

CXX = g++
CXXFLAGS = -I $(SRCDIR) -ansi -pedantic -Wall -Wextra -std=c++14 
CXXFLAGS += -MP -MMD
DBGFLAGS = -ggdb3 -DDEBUG -O0
RLSFLAGS = -O2

##############################################################################

# Build library (release version)

$(LIBNAME) : $(SRCFILES:%.cc=%.o)
	ar crs $(LIBNAME) $(SRCFILES:%.cc=%.o)
	ranlib $(LIBNAME)

%.o : %.cc %.h
	$(CXX) $(CXXFLAGS) $(RLSFLAGS) -c $< -o $@ -lbass

# Build library (debug version)

debug	: $(SRCFILES:%.cc=%dbg.o)
	ar crs $(LIBNAME) $(SRCFILES:%.cc=%dbg.o)
	ranlib $(LIBNAME)

%dbg.o : %.cc %.h
	$(CXX) $(CXXFLAGS) $(DBGFLAGS) -c $< -o $@ -lbass

##############################################################################

# Include dependicies files early generated by compiler with -MP -MMD opts

-include $(SRCFILES:%.cc=%.d)

# Clean garbage

clean :
	rm -f *.o *.d $(LIBNAME)
